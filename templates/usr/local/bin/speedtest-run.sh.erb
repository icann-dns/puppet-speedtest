#!/bin/bash
PATH=/usr/bin:/usr/local/bin

OUTPUT=<%= @output_file %>.<%= @output_format %>
SERVERS="$(speedtest-cli --list| awk -F\) '/<%= @location %>/ {print $1}' | head -<%= @no_test_servers %>)"
rm -rf ${OUTPUT}
for i in {1..<%= @no_tests %>}
do
  if [ -z "${SERVERS}" ]
  then
    speedtest-cli --<%= @output_format %> >> ${OUTPUT}
  else
    for SERVER in ${SERVERS}
    do
      speedtest-cli --<%= @output_format %> --server ${SERVER} >> ${OUTPUT}
    done
  fi
done
